<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamenVargasMAUI.About"
             Title="About">
    <Grid RowDefinitions="200,200"

          ColumnDefinitions="*,*"

          Padding="100"

          RowSpacing="0"

          ColumnSpacing="0">
        <Frame BorderColor="Gray"

               CornerRadius="10"

               Padding="10">
            <Label Text="Nombre: Pablo Vargas"

                   FontSize="16"

                   HorizontalOptions="Center"

                   VerticalOptions="Center"/>
        </Frame>
        <Frame BorderColor="Gray"

               CornerRadius="10"

               Padding="10"

               Grid.Column="1">
            <Label Text="Nacimiento: 7 de octubre del 2004"

                   FontSize="16"

                   HorizontalOptions="Center"

                   VerticalOptions="Center"/>
        </Frame>
        <Frame BorderColor="Gray"

               CornerRadius="10"

               Padding="10"

               Grid.Row="1">
            <Label Text="Intereses: Videojuegos y música"

                   FontSize="16"

                   HorizontalOptions="Center"

                   VerticalOptions="Center"/>
        </Frame>
        <Frame BorderColor="Gray"

               CornerRadius="10"

               Padding="10"

               Grid.Row="1"

               Grid.Column="1">
            <Label Text="Versión: 1.0.0"

                   FontSize="16"

                   HorizontalOptions="Center"

                   VerticalOptions="Center"/>
        </Frame>
    </Grid>

</ContentPage>